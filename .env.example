# SIRA - Sistema Inteligente de Recuperação Ambiental
# Environment Variables Configuration

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
APP_NAME="SIRA Backend Service"
APP_VERSION=1.0.0

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8080
WORKERS=4
HOT_RELOAD=true

# =============================================================================
# GOOGLE CLOUD CONFIGURATION
# =============================================================================
GOOGLE_CLOUD_PROJECT=ecosystem-recovery-ai
GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account.json
VERTEX_AI_LOCATION=us-central1

# =============================================================================
# API KEYS
# =============================================================================
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# FIREBASE/FIRESTORE
# =============================================================================
FIREBASE_PROJECT_ID=ecosystem-recovery-ai
FIRESTORE_DATABASE=(default)
FIRESTORE_COLLECTION=sira_analyses
FIREBASE_STORAGE_BUCKET=ecosystem-recovery-ai.appspot.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
BACKEND_URL=http://localhost:8000
RAG_SERVICE_URL=http://localhost:8001
GPU_SERVICE_URL=http://localhost:8002
FRONTEND_URL=http://localhost:5173

# Service URLs - Production
PROD_BACKEND_URL=https://backend-service-url.run.app
PROD_RAG_SERVICE_URL=https://us-central1-project-id.cloudfunctions.net
PROD_GPU_SERVICE_URL=https://gpu-service-url.run.app
PROD_FRONTEND_URL=https://project-id.web.app

# Database Configuration
FIRESTORE_COLLECTION_ANALYSES=analyses
FIRESTORE_COLLECTION_KNOWLEDGE_BASE=knowledge_base
FIRESTORE_COLLECTION_EMBEDDINGS=embeddings

# GPU Service Configuration
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
GEMMA_MODEL_NAME=gemma2:9b
GPU_MEMORY_LIMIT=16GB
BATCH_SIZE=4

# RAG Configuration
EMBEDDING_MODEL=text-embedding-004
VECTOR_DIMENSION=768
SIMILARITY_THRESHOLD=0.7
MAX_RETRIEVAL_RESULTS=10

# Backend Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
WORKERS=4
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:5173,https://project-id.web.app

# Data Sources Configuration
GBIF_API_URL=https://api.gbif.org/v1
IUCN_API_URL=https://apiv3.iucnredlist.org/api/v3
OBIS_API_URL=https://api.obis.org
EBIRD_API_URL=https://api.ebird.org/v2

# Data Sources API Keys
IUCN_API_TOKEN=your-iucn-api-token
EBIRD_API_KEY=your-ebird-api-key

# Monitoring Configuration
ENABLE_MONITORING=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Development Configuration
DEBUG=true
DEVELOPMENT_MODE=true
HOT_RELOAD=true

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600
ENABLE_CACHE=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4,video/webm
UPLOAD_TIMEOUT_SECONDS=300

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30
