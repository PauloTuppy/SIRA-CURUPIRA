# SIRA RAG Service Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=development
PORT=5001
APP_VERSION=1.0.0

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-firebase-project-id.appspot.com
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Firestore Collections
FIRESTORE_KNOWLEDGE_BASE_COLLECTION=knowledge_base
FIRESTORE_EMBEDDINGS_COLLECTION=embeddings
FIRESTORE_ANALYSES_COLLECTION=analyses
FIRESTORE_INGESTION_JOBS_COLLECTION=ingestion_jobs

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
VERTEX_AI_LOCATION=us-central1

# Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-pro

# Data Source API Keys
IUCN_API_TOKEN=your-iucn-api-token
EBIRD_API_KEY=your-ebird-api-key

# GBIF and OBIS are public APIs and don't require keys
# GBIF_API_URL=https://api.gbif.org/v1
# OBIS_API_URL=https://api.obis.org

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Configuration
REQUEST_TIMEOUT=30000
MAX_CONCURRENT_REQUESTS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-004
EMBEDDING_DIMENSIONS=768
EMBEDDING_BATCH_SIZE=100

# Vector Search Configuration
VECTOR_SEARCH_THRESHOLD=0.7
VECTOR_SEARCH_MAX_RESULTS=10

# Ingestion Configuration
INGESTION_CHUNK_SIZE=1000
INGESTION_CHUNK_OVERLAP=200
INGESTION_BATCH_SIZE=10
INGESTION_MAX_CONCURRENT_JOBS=5

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000
